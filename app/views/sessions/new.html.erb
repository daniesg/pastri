<%= render partial: "components/header", locals: { title: "Sign In" } %>

<%= form_with model: User.new, url: sessions_path, class: "mx-24 mt-32" do |f| %>
  <%= f.label :email, class: "pastri-label" %>
  <%= f.email_field :email, class: "pastri-input" %>

  <button class="btn btn-main btn-block mt-16">Login</button>
<% end %>

<p class="text-muted text-small mt-48 text-center">
  Don't have an account <%= link_to "Sign Up", new_user_path, class: "text-dark" %>
</p>